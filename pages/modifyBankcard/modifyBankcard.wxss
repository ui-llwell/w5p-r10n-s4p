}


.iphone {
  width: 690rpx;
  height: 89rpx;
  line-height: 89rpx;
  font-size: 34rpx;
  background: #fff;
  margin: 0 auto 3rpx;
  padding: 0 30rpx
}
.iphone_left {
  float:  left;
  width: 690rpx;
  height: 89rpx;
  
}
.iphone_left input {
  width: 256px;
  height: 89rpx;
  display: block;
  float: right;
  font-size: 33rpx;
  color: #B2B2B2;
